<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketScore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.css' rel='stylesheet' />
    <style>
        .navbar-nav .nav-link {
            transition: none;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(255, 165, 0, 0.2);
                color: #FFA500;
            }

            .navbar-nav .nav-link:not(.active) {
                cursor: default;
            }

            .navbar-nav .nav-link[asp-action="Start"],
            .navbar-nav .nav-link[asp-action="Tickets"],
            .navbar-nav .nav-link[asp-action="FilteredEvents"] {
                cursor: pointer;
            }
    </style>
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Start" style="color: #FFA500;">TicketScore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Events" asp-action="Index">Evenementen beheren</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="eventDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Evenementen
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="eventDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Start">Alle Evenementen</a></li>
                                <li><a class="dropdown-item" asp-controller="Events" asp-action="FilteredEvents" asp-route-eventType="FoodTruckFestival">Foodtruckfestivals</a></li>
                                <li><a class="dropdown-item" asp-controller="Events" asp-action="FilteredEvents" asp-route-eventType="TheaterPerformance">Theatervoorstellingen</a></li>
                                <li><a class="dropdown-item" asp-controller="Events" asp-action="FilteredEvents" asp-route-eventType="DatingEvent">Dating events</a></li>
                                <li><a class="dropdown-item" asp-controller="Events" asp-action="FilteredEvents" asp-route-eventType="MusicPerformance">Muziekoptredens</a></li>
                                <li><a class="dropdown-item" asp-controller="Events" asp-action="FilteredEvents" asp-route-eventType="Festival">Festivals</a></li>
                                <li><a class="dropdown-item" asp-controller="Events" asp-action="FilteredEvents" asp-route-eventType="Other">Overig</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Details" title="Accountgegevens" style="color: #FFA500;">
                                    <i class="fas fa-user"></i>
                                </a>
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout" title="Uitloggen" style="color: #FFA500;">
                                    <i class="fas fa-sign-out-alt"></i>
                                </a>
                            }
                            else
                            {
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login" title="Inloggen" style="color: #FFA500;">
                                    <i class="fas fa-user"></i>
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2024 - TicketScore -
            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" style="color: #FFA500;">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.js'></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
