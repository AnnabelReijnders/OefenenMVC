@model OefenenMVC.Models.RegisterModel

@{
    ViewData["Title"] = "Registreren";
}

<style>
    /* Achtergrondkleur van de pagina */
    body {
        background-color: #1b1b1b; /* Zwart thema */
    }

    /* Verwijder hover-effect */
    .card {
        transition: none; /* Zorg ervoor dat er geen overgang is */
    }

    /* Extra ruimte tussen titel en kaart */
    h1 {
        margin-bottom: 40px; /* Verhoog de ruimte onder de titel */
    }
</style>

<div class="container mt-4">
    <h1 class="text-warning text-center">Registreren</h1> <!-- Titel in oranje -->

    <div class="card" style="background-color: #333; border: none;">
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Naam</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mailadres</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Telefoonnummer</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Wachtwoord</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <!-- Extra marge onder de knop -->
                    <input type="submit" value="Registreer" class="btn btn-warning" style="margin-top: 10px;" /> <!-- Extra marge boven de knop -->
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a class="text-warning" asp-action="Login">Heb je al een account? Log hier in.</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
