@model OefenenMVC.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "Wachtwoord vergeten";
}

<style>
    /* Achtergrondkleur van de pagina */
    body {
        background-color: #1b1b1b; /* Zwart thema */
    }

    h1 {
        color: #FFA500; /* Oranje voor de titel */
        margin-bottom: 30px; /* Ruimte onder de titel */
    }

    /* Verwijder hover-effect */
    .card {
        transition: none; /* Zorg ervoor dat er geen overgang is */
    }

    /* Extra ruimte tussen de knop en de footer */
    .mt-3 {
        margin-top: 20px; /* Verhoog de ruimte tussen de knop en de footer */
    }

    /* Extra ruimte tussen invoervelden en de knop */
    .mb-4 {
        margin-bottom: 20px; /* Ruimte tussen velden en knop */
    }

    /* Specifieke marge voor de knop */
    .btn-warning {
        margin-top: 15px; /* Voeg marge toe boven de knop */
    }
</style>

<div class="container mt-4">
    <h1 class="text-warning text-center">Wachtwoord vergeten</h1> <!-- Titel in oranje -->

    <div class="card" style="background-color: #333; border: none;">
        <div class="card-body">
            <h4 class="text-white">Voer uw e-mailadres in om een nieuw wachtwoord aan te maken</h4>
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mailadres</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label">Nieuw Wachtwoord</label>
                    <input asp-for="NewPassword" class="form-control" type="password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <input type="submit" value="Wachtwoord aanpassen" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a class="text-warning" asp-action="Login">Wachtwoord niet wijzigen? Log hier in.</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
