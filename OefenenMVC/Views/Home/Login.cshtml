@model OefenenMVC.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Achtergrondkleur van de pagina */
    body {
        background-color: #1b1b1b; /* Zwart thema */
    }

    /* Verwijder hover-effect */
    .card {
        transition: none; /* Zorg ervoor dat er geen overgang is */
    }
</style>

<div class="container mt-4">
    <h1 class="text-warning">Login</h1> <!-- Titel in oranje -->

    <div class="card" style="background-color: #333; border: none;">
        <!-- Donkergrijze achtergrond voor de kaart -->
        <div class="card-body">
            <h4 class="text-white">Log in om de evenementen te bekijken</h4> <!-- Titel in wit -->
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mailadres</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Wachtwoord</label>
                    <input asp-for="Password" class="form-control" type="password" style="margin-bottom: 20px;" /> <!-- Extra marge onder het invoerveld -->
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Inloggen" class="btn btn-warning" /> <!-- Geen extra marge nodig bij de knop -->
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a class="text-warning" asp-action="Register">Registreer hier</a>
    </div>
    <div>
        <a class="text-warning" asp-action="ForgotPassword">Wachtwoord vergeten?</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
