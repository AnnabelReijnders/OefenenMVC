@model IEnumerable<OefenenMVC.Models.Event>

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Evenementen</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1b1b1b; /* Zwart thema */
            color: #ffffff; /* Witte tekst */
        }

        h1 {
            color: #FFA500; /* Oranje voor de titel */
            margin-bottom: 30px; /* Ruimte onder de titel */
        }

        .card {
            background-color: #333; /* Donkergrijs voor kaarten */
            border: none; /* Geen rand */
        }

            .card:hover {
                cursor: pointer; /* Cursor veranderen naar pointer bij hover */
                transform: scale(1.05); /* Klein effect bij hover */
                transition: transform 0.2s; /* Smooth transition */
            }

        .card-img-top {
            height: 200px; /* Vaste hoogte voor afbeeldingen */
            object-fit: cover; /* Beeld vullen zonder vervorming */
        }

        .btn-primary {
            background-color: #f77f00; /* Oranje knop */
            border: none;
        }

            .btn-primary:hover {
                background-color: #ff8c00; /* Lichtere oranje bij hover */
            }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>Evenementen</h1> <!-- Titel in oranje -->
        <div class="row">
            @foreach (var evenement in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm" onclick="location.href='@Url.Action("Details", "Events", new { id = evenement.EventID })';">
                        <div class="card-body">
                            <h5 class="card-title">@evenement.Name</h5>
                            <p class="card-text">@evenement.Description</p>
                            <p class="card-text"><small class="text-muted">@evenement.Date.ToString("dd MMM yyyy")</small></p>
                            @if (evenement.ImageData != null)
                            {
                                <img src="@Url.Action("GetImage", "Events", new { id = evenement.EventID })" alt="Event Image" class="card-img-top" />
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Voeg jQuery en Bootstrap JavaScript toe zonder Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
