@model IEnumerable<OefenenMVC.Models.Event>

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Evenementen</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1b1b1b;
            color: #ffffff;
        }

        h1 {
            color: #FFA500;
            margin-bottom: 30px;
        }

        .card {
            background-color: #333;
            border: none;
            width: 300px;
            height: 400px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .card:hover {
                cursor: pointer;
                transform: scale(1.05); 
                transition: transform 0.2s;
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center; 
            flex-grow: 1;
        }

        .btn-primary {
            background-color: #f77f00;
            border: none;
        }

            .btn-primary:hover {
                background-color: #ff8c00;
            }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>Evenementen</h1> 
        <div class="row">
            @foreach (var evenement in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm" onclick="location.href='@Url.Action("Details", "Events", new { id = evenement.EventID })';">
                        @if (evenement.ImageData != null)
                        {
                            <img src="@Url.Action("GetImage", "Events", new { id = evenement.EventID })" alt="Event Image" class="card-img-top" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@evenement.Name</h5>
                            <p class="card-text">
                                @(evenement.Description.Length > 100
                                    ? evenement.Description.Substring(0, 100) + "..."
                                    : evenement.Description)
                            </p>
                            <p class="card-text"><small class="text-muted">@evenement.Date.ToString("dd MMM yyyy")</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap.min.js"></script>
</body>
</html>
